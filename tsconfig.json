{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Monorepo-specific settings
    "noEmit": true,
    "incremental": true,

    // Monorepo-specific path mappings
    "baseUrl": ".",
    "paths": {
      "@gotpop/server": ["./packages/server/src"],
      "@gotpop/server/*": ["./packages/server/src/*"],
      "@gotpop/ui": ["./packages/ui/src"],
      "@gotpop/icons": ["./packages/icons/src"],
      "@gotpop/tokens": ["./packages/tokens/src"],
      "@gotpop/utils": ["./packages/utils/src"]
    }
  },
  "include": ["packages/*/src/**/*", "apps/*/src/**/*"],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/node_modules",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
