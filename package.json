{
  "name": "gotpop-system",
  "private": true,
  "version": "0.1.0",
  "description": "Design system monorepo for gotpop projects",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format:check": "turbo run format:check",
    "format:fix": "turbo run format:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "publish-packages": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.0.0",
    "next": "16.0.1",
    "prettier": "^3.6.2",
    "turbo": "^1.13.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=22.20.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 80,
    "arrowParens": "always"
  }
}
